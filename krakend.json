{
  "$schema": "https://www.krakend.io/schema/v2.11/krakend.json",
  "version": 3,
  "port": 8082,
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/xml-example",
      "method": "GET",
      "output_encoding": "xml",
      "backend": [
        {
          "url_pattern": "/some-bucket",
          "host": [ "https://a3s.fi" ],
          "encoding": "xml",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            },
            "plugin/req-resp-modifier": {
              "name": [
                "modifier-example-request",
                "modifier-example-response"
              ]
            }
          }
        }
      ]
    },
    {
      "endpoint": "/no-op-example",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/some-bucket",
          "host": [ "https://a3s.fi" ],
          "encoding": "xml",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            },
            "plugin/req-resp-modifier": {
              "name": [
                "modifier-example-request",
                "modifier-example-response"
              ]
            }
          }
        }
      ]
    }
  ],
  "extra_config": {
    "router": {
      "return_error_msg": true
    }
  },
  "plugin": {
    "pattern": ".so",
    "folder": "/opt/krakend/plugins/"
  }
}
