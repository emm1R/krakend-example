{
  "$schema": "https://www.krakend.io/schema/v2.11/krakend.json",
  "version": 3,
  "port": 8082,
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/example",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/example",
          "host": ["https://my.foo-api.com"],
          "extra_config": {
            "plugin/middleware": {
              "name": ["mw-example"]
            },
            "plugin/req-resp-modifier": {
              "name": ["modifier-example"]
            }
          }
        }
      ]
    }
  ],
  "extra_config": {
    "router": {
      "return_error_msg": true
    }
  },
  "plugin": {
    "pattern": ".so",
    "folder": "/opt/krakend/plugins/"
  }
}
